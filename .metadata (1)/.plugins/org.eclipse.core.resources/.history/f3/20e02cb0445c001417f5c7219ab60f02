
public class SimulationTest
{

	public static void main(String[] args)
	{
		boolean again = true;
		boolean isDouble;
		do
		{

			System.out.println("Enter the velocity of the projectile: ");

			if (input.hasNextInt())
			{
				int answer = input.nextInt();

				if (answer == 1)
				{
					again = true;
					break;

				}
				else if (answer == 2)
				{
					again = false;
					break;
